@page "/api-consumption"
@using System.Net.Http
@using System.Net.Http.Json

<h3>Exemplo de Consumo de API Pública</h3>

@if (posts == null)
{
    <p>Carregando...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Corpo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in posts)
            {
                <tr>
                    <td>@post.Id</td>
                    <td>@post.Title</td>
                    <td>@post.Body</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Post[]? posts;

    [Inject]
    private HttpClient? HttpClient { get; set; }

    protected override async Task OnInitializedAsync() => posts = await HttpClient.GetFromJsonAsync<Post[]>("posts");

    private class Post
    {
        public int Id { get; set; }
        public string? Title { get; set; }
        public string? Body { get; set; }
    }
}
